{{!< default}} 

{{#post}} 
<header class="mel-container mel-post__header">
    <div class="mel-post__header-banner"></div>
    <div class="mel-post__header-left">
        <h1 class="mel-post__title">{{title}}</h1>
        {{#if excerpt}}<p class="post__excerpt">{{excerpt}}</p>{{/if}}
        
    </div>
    <div class="mel-post__header-right">
        <img class="mel-post__feature-image" 
        srcset="{{img_url feature_image size="m" }} 500w, 
                {{img_url feature_image size="l" }} 700w, 
                {{img_url feature_image size="xl" }} 1000w" 
                sizes="(min-width: 48rem) 700px, 100vw" 
                src="{{img_url feature_image size="l"}}"
            alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" height="450" width="576">
    </div>
    {{#is "post"}}
        {{#primary_author}}
            <div class="mel-post__author--container">
                <div class="mel-post__author">
                    <img class="mel-post__author--image" src="{{profile_image}}" alt="{{name}}">
                    <div class="mel-post__author-right">
                        <a class="mel-post__author--name" href="{{url}}">{{name}}</a>
                        <p class="mel-post__date">{{date}} &bull; {{../reading_time}} min read</p>
                    </div>
                </div>
                <div class="mel-post__author--divider"></div>
            </div>
        {{/primary_author}}
    {{/is}}
</header>

<div class="mel-container {{post_class}}">
       
    <article class="mel-post__item">
        {{content}}
    </article>

    <aside class="mel-share" aria-label="share bar">
        <a href="https://www.facebook.com/sharer.php?u={{url absolute='true'}}" class="mel-share__link" aria-label="share on facebook">
            <svg aria-hidden="true" viewBox="0 0 24 24"><path fill="none" d="M0 0h24v24H0z"/><path d="M14 13.5h2.5l1-4H14v-2c0-1.03 0-2 2-2h1.5V2.14c-.326-.043-1.557-.14-2.857-.14C11.928 2 10 3.657 10 6.7v2.8H7v4h3V22h4v-8.5z"/></svg>
        </a>
        <a href="https://twitter.com/share?url={{url absolute='true'}}&text={{encode excerpt}}&via=TheRoyalFig" class="mel-share__link" aria-label="share on twitter">
            <svg aria-hidden="true" viewBox="0 0 24 24"><path fill="none" d="M0 0h24v24H0z"/><path d="M22.162 5.656a8.384 8.384 0 0 1-2.402.658A4.196 4.196 0 0 0 21.6 4c-.82.488-1.719.83-2.656 1.015a4.182 4.182 0 0 0-7.126 3.814 11.874 11.874 0 0 1-8.62-4.37 4.168 4.168 0 0 0-.566 2.103c0 1.45.738 2.731 1.86 3.481a4.168 4.168 0 0 1-1.894-.523v.052a4.185 4.185 0 0 0 3.355 4.101 4.21 4.21 0 0 1-1.89.072A4.185 4.185 0 0 0 7.97 16.65a8.394 8.394 0 0 1-6.191 1.732 11.83 11.83 0 0 0 6.41 1.88c7.693 0 11.9-6.373 11.9-11.9 0-.18-.005-.362-.013-.54a8.496 8.496 0 0 0 2.087-2.165z"/></svg>
        </a>
        <a href="https://www.linkedin.com/shareArticle?url={{url absolute='true'}}&title={{title}}" class="mel-share__link" aria-label="share on linkedin">
            <svg aria-hidden="true"  viewBox="0 0 24 24" width="24" height="24"><path fill="none" d="M0 0h24v24H0z"/><path d="M6.94 5a2 2 0 1 1-4-.002 2 2 0 0 1 4 .002zM7 8.48H3V21h4V8.48zm6.32 0H9.34V21h3.94v-6.57c0-3.66 4.77-4 4.77 0V21H22v-7.93c0-6.17-7.06-5.94-8.72-2.91l.04-1.68z"/></svg>
        </a>
        <button class="mel-share__link mel-share-button" id="copy-button" data-url="{{url absolute='true'}}" aria-label="copy link">
            <svg class="mel-not-copied" aria-hidden="true" viewBox="0 0 24 24" width="24" height="24"><path fill="none" d="M0 0h24v24H0z"/><path d="M7 4V2h10v2h3.007c.548 0 .993.445.993.993v16.014a.994.994 0 0 1-.993.993H3.993A.994.994 0 0 1 3 21.007V4.993C3 4.445 3.445 4 3.993 4H7zm0 2H5v14h14V6h-2v2H7V6zm2-2v2h6V4H9z"/></svg>
            <svg class="mel-copied" aria-hidden="true"  viewBox="0 0 24 24" width="24" height="24"><path fill="none" d="M0 0h24v24H0z"/><path d="M6 4v4h12V4h2.007c.548 0 .993.445.993.993v16.014a.994.994 0 0 1-.993.993H3.993A.994.994 0 0 1 3 21.007V4.993C3 4.445 3.445 4 3.993 4H6zm2-2h8v4H8V2z"/></svg>
        </button>
        <button class="mel-share__link mel-up-button" aria-label="go to top">
            <svg aria-hidden="true" viewBox="0 0 24 24"><path fill="none" d="M0 0h24v24H0z"/><path d="M13 12v8h-2v-8H4l8-8 8 8z"/></svg>
        </button>
    </aside>
        
</div>
{{/post}}

{{!-- Related --}}
{{#get "posts" limit="5" filter="tags:[{{post.tags}}]+id:-{{post.id}}" include="tags" as |related|}}
{{#if related}}

<header class="mel-header">
    <h2>What&apos;s Next</h2>
    <div class="mel-header__line"></div>
</header>

<div class="mel-container">
    <div class="mel-container__inner">
        {{#foreach related}}
            {{> "list"}}
        {{/foreach}}
    </div>
</div>
{{/if}}
{{/get}}

{{^if @member}}
    {{#is 'post'}}
        {{> "cta"}}
    {{/is}}
{{/if}}

{{#contentFor 'scripts'}}
    <script src="{{asset 'built/post.js'}}" defer></script>
{{/contentFor}}
