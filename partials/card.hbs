<article class="">
    <a href="{{url}}" class="card">
    <img class="card__bg" src="{{feature_image}}">
    <div class="card__body">
        <time class="card__date" datetime="{{date published_at format="YYYY-MM-DD"}}">{{date published_at timeago="true"}}</time>
        <div class="card__bottom">
            <h3 class="card__title">{{title}}</h3>
            <p class="card__excerpt">{{excerpt}}</p>
            <p class="card__more" href="{{url}}">Read &rarr;</p>
        </div>
    </div>
    </a>
</article>