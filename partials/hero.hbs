                            <svg aria-label="crown" viewBox="0 0 24 24"><path fill="none" d="M0 0h24v24H0z"/><path d="M2 19h20v2H2v-2zM2 5l5 3.5L12 2l5 6.5L22 5v12H2V5zm2 3.841V15h16V8.841l-3.42 2.394L12 5.28l-4.58 5.955L4 8.84z"/></svg>
                            {{location}}</p>
                        
                    {{/author}}
                {{/is}}
            </div>
            <div class="mel-hero__right">
                {{^is "author"}}
                    <img class="mel-hero__img" 
                    srcset="{{img_url @site.cover_image size="s"}} 350w, 
                            {{img_url @site.cover_image size="m"}} 500w,
                            {{img_url @site.cover_image size="l"}} 700w,
                            {{img_url @site.cover_image size="xl"}} 1000w,"
                            sizes="(min-width: 36rem) 500w, 100vw"
                            src="{{img_url @site.cover_image size="m"}}" alt="{{@site.title}}">
                {{else}}
                    {{#author}}
                        <img class="mel-hero__img" 
                        srcset="{{img_url cover_image size="s"}} 350w, 
                                {{img_url cover_image size="m"}} 500w,
                                {{img_url cover_image size="l"}} 700w,
                                {{img_url cover_image size="xl"}} 1000w,"
                                sizes="(min-width: 36rem) 500w, 100vw"
                                src="{{img_url cover_image size="m"}}" alt="{{name}}">
