{
  "name": "mel",
  "version": "1.0.0",
  "description": "Mel is a theme for Ghost",
  "engines": {
    "ghost": ">=4.0.0",
    "ghost-api": "v4"
  },
  "scripts": {
    "dev": "NODE_ENV=development npx rollup -c",
    "watch": "NODE_ENV=development npx rollup -c -w",
    "build": "NODE_ENV=production npx rollup -c",
    "zip": "npm run build && node zip",
    "check": "gscan .",
    "css": "npx stylelint 'src/css/**/*.css' --fix"
  },
  "config": {
    "posts_per_page": 15,
    "image_sizes": {
      "xxs": {
        "width": 50
      },
      "xs": {
        "width": 100
      },
      "s": {
        "width": 350
      },
      "m": {
        "width": 500
      },
      "l": {
        "width": 700
      },
      "xl": {
        "width": 1000
      },
      "xxl": {
        "width": 2000
      }
    },
    "custom": {
      "api": {
        "type": "text"
      }
    }
  },
  "keywords": [
    "ghost-theme"
  ],
  "author": {
    "name": "Ryan Feigenbaum",
    "email": "ryan.feigenbaum@gmail.com",
    "url": "https://ryanfeigenbaum.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.1",
    "adm-zip": "^0.5.9",
    "cssnano": "^5.0.10",
    "eslint": "^8.1.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.25.2",
    "gscan": "^4.20.0",
    "postcss": "^8.3.11",
    "postcss-import": "^14.0.2",
    "postcss-preset-env": "^6.7.0",
    "rollup": "^2.58.3",
    "rollup-plugin-postcss": "^4.0.1",
    "rollup-plugin-terser": "^7.0.2",
    "stylelint": "^14.0.1",
    "stylelint-order": "^5.0.0"
  },
  "dependencies": {
    "@tryghost/content-api": "^1.5.16",
    "@tryghost/helpers": "^1.1.54",
    "highlight.js": "^11.3.1",
    "js-search": "^2.0.0",
    "reframe.js": "^3.0.3"
  }
}
